<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalmSpace.Views.SettingsView">
    <Frame Padding="20" CornerRadius="15" BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="300" HeightRequest="400">
        <StackLayout>
            <Label Text="Settings" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Switch x:Name="SoundToggle" IsToggled="True"/>
            <Label Text="Enable Sound" HorizontalOptions="Center"/>
            <Button Text="Close" Clicked="CloseSettings"/>
        </StackLayout>
    </Frame>
</ContentView>
