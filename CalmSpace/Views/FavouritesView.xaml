<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalmSpace.Views.FavouritesView">
    <Frame Padding="20" CornerRadius="15" BackgroundColor="White" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="300" HeightRequest="400">
        <StackLayout>
            <Label Text="Favourites" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
            <CollectionView ItemsSource="{Binding Favourites}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding SoundName}" HorizontalOptions="Center"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Close" Clicked="CloseFavourites"/>
        </StackLayout>
    </Frame>
</ContentView>
